html{
  margin: 0;
  padding: 0;
}
.container{
  margin: 0;
  padding: 0;
  width: 100%;
  height: 100%;
  overflow-y: scroll;
}
.userinfo {
  padding-top:20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}
.userinfo-nickname {
  color: #fff;
}
.top{
  width: 100%;
  height: 300rpx;
  background:#515151;
}
.menu{
  position: relative;
  width: 100%;
  height: 150rpx;
  display: flex;
  color: #8a8a8a;
  font-size: 14px;
}
.menu::before{
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 1px;
  transform: scaleY(.5);
  background-color: #8a8a8a;
}
.menu::after{
  content: '';
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 1px;
  transform: scaleY(.5);
  background-color: #c9c9c9;
}
image{
 display:block;
