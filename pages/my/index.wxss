 margin: 15rpx auto;
}
.dingdan{
  flex: 1;
  text-align: center;
  position: relative;
}
.dingdan::after{
  content: '';
  position: absolute;
  right: 0;
  top: 20px;
  bottom: 20px;
  width: 1px;
  transform: scaleX(.5);
  background-color: #c9c9c9;
}
